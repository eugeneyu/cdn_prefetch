resources:

{% for i in properties['zones'] %}
- type: compute.v1.instance
  name: {{ properties["instance-name"] }}-{{ i }}
  properties:
     machineType: zones/{{ i }}/machineTypes/{{ properties["machineType"] }}
     zone: {{ i }}
     metadata:
       items:
       - key: startup-script
         value: |
           #!/bin/bash
           useradd -d /home/prefetch -m -s "/bin/bash" prefetch
           ls /home/prefetch/.ssh || mkdir /home/prefetch/.ssh
           echo "ssh-rsa  prefetch" >> /home/prefetch/.ssh/authorized_keys
     networkInterfaces:
       - network: global/networks/default
         accessConfigs:
         - name: External-IP
           type: ONE_TO_ONE_NAT
     disks:
      - deviceName: boot
        type: PERSISTENT
        boot: true
        autoDelete: true
        initializeParams:
          diskName: boot
          sourceImage: https://www.googleapis.com/compute/v1/projects/debian-cloud/global/images/family/debian-9
     tags:
       items:
         - benchmark
{% endfor %}
